<odoo>

    <record id='wsf_noticias_norep_action' model='ir.actions.act_window'>
        <field name="name">Norep</field>
        <field name="res_model">wsf_noticias_norep</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="wsf_noticias_norep_root"
              parent="wsf_noticias_root"
              name="Norep"
              action="wsf_noticias_norep_action"/>

    <!-- Tree View -->
    <record id="wsf_noticias_norep_tree" model="ir.ui.view">
        <field name="name">Norep</field>
        <field name="model">wsf_noticias_norep</field>
        <field name="arch" type="xml">
            <tree>
<!--                <field name="medio"/>-->
                <field name="titulo"/>
                <field name="link"/>
                <field name="fecha_registro"/>
            </tree>
        </field>
    </record>
    <!--fin tree-->

</odoo>